<% if @photo.errors.present? %>
  <ul>
    <% @photo.errors.each do |error, message| %>
      <li>
        <%= "#{error.capitalize}" "#{message}" %>
      </li>
    <% end %>
  </ul>
<% end %>


<%= form_for @photo, :url => photos_path do |f| %>
<div class="form-group">
  <%= f.label :title, "Title" %>
  <%= f.text_field :title, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :date, "Date"%>
  <%= f.text_field :date, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :description, "Description" %>
  <%= f.text_area :description, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :file_location, "File Location" %>
  <%= f.file_field :file_location %>
</div>
  <%= f.submit %>

<% end %>